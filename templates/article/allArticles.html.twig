{% extends 'layout.html.twig' %}

{% block title %}
	{{ parent() }}
	- articles
{% endblock %}

{% block content %}
	{% for article in articles %}
		<div class="row d-flex justify-content-center text-center">
			<div class="card m-1" style="width: 18rem;">
				<div class="card-body">
					<div>
						<a href="{{ path('update-article',{id:article.id})}}">
							<i class="fas fa-edit mx-1 text-success"></i>
						</a>
						<a href="{{ path('delete-article',{id:article.id})}}">
							<i class="fas fa-trash mx-1 text-danger" onclick="return confirm('Etes vous sûr de vouloir supprimer cet article?')"></i>
						</a>
					</div>
					<h5 class="card-title">{{article.titre}}</h5>
					<h6 class="card-title mb-2 text-muted">Créé le :
						{{article.dateDeCreation | date("d/m/y \à H\\hi")}}</h6>
					{% if article.dateDeModification is not null %}
						<h6 class="card-title mb-2 text-muted">modifié  le :
							{{article.dateDeModification | date("d/m/y \à H\\hi")}}</h6>
					{% endif %}
					<h6>auteur</h6>
					<p class="card-text">{{article.contenu | slice(0,150)}}</p>
					<a href="{{path('read-article',{id:article.id})}}" class="btn btn-primary">lire l'article</a>
				</div>
			</div>
		{% endfor %}

	{% endblock %}
